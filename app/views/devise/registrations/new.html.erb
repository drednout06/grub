<% provide(:title, t(".title")) %>
<div class="page-header">
  <h1><%= t(params[:restaurateur] ? '.restaurateur_title' : '.title') %></h1>
</div>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name),
      :html => { :class => 'form-horizontal' }) do |f| %>
  <div class="form-inputs">
    <div class="row">
      <div class="span4">
      	<%= f.input :first_name, :autofocus => true %>
      	<%= f.input :last_name %>
        <%= f.input :phone_number, placeholder: t('.phone_hint') %>
      </div>
      <div class="span5">
        <%= f.input :email, :required => true, placeholder: t('.email_hint') %>
        <%= f.input :password, :required => true %>
        <%= f.input :password_confirmation, :required => true %>
        <%= f.input :restaurateur, as: :hidden, :input_html => { :value => params[:restaurateur] ? '1' : '0' } %>
      </div>
    </div>
    <%= render "devise/shared/links" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t(params[:restaurateur] ? '.restaurateur_button' : '.button'), :class => 'btn-primary' %>
  </div>
<% end %>

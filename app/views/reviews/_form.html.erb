<%= simple_form_for [@restaurant, @review], :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group text required">
    <label class="text required control-label" for="review_content"><abbr title="required">*</abbr>
      <%= t('navigation.your_rating') %>:
    </label>

    <div class="controls">
      <span>
      <% 1.upto(5) do |value| %>
        <%= star_button value, false %>
      <% end %>
    </span>
      <span id="hover-rating"> </span>
    </div>

  </div>
  
  <%= f.input :title %>
  <%= f.input :content, input_html: {rows: 3} %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                restaurant_reviews_path(@restaurant), :class => 'btn' %>
  </div>
<% end %>
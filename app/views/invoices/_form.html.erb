<%= simple_form_for [@user, @invoice], :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :user_id %>
  <%= f.input :comment %>
  <%= f.input :sum %>
  <%= f.input :paid_at %>
  <%= f.input :status %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                user_invoices_path(@user), :class => 'btn' %>
  </div>
<% end %>

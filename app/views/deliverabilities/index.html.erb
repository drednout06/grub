<%- model_class = Deliverability -%>
<div class="page-header">
  <h1>
  <%=t '.title', :default => District.model_name.human(count: 2).mb_chars.capitalize %></h1>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:district) %></th>
      <th><%= model_class.human_attribute_name(:fee) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @deliverabilities.each do |deliverability| %>
      <tr>
        <td><%= link_to deliverability.id, deliverability_path(deliverability) %></td>
        <td><%= deliverability.district.name %></td>
        <td><%= deliverability.fee %></td>
        <td><%= l deliverability.created_at, format: :short %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_deliverability_path(deliverability), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      deliverability_path(deliverability),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_restaurant_deliverability_path(@restaurant),
            :class => 'btn btn-primary' %>

<%- model_class = Order -%>
<div class="offset4">
  <%= render 'shared/addthis' %>
</div>
<div class="page-header">
  <h1><%= t(".title") %></h1>  
</div>
<% @orders = @orders.order("created_at desc") %>
<div class="row">
  <div class="span12">
    <table class="table table-striped">
      <thead>
        <tr>
          <th><%= model_class.human_attribute_name(:id) %></th>
          <th><%= model_class.human_attribute_name(:status) %></th>
          <th><%= Restaurant.model_name.human.mb_chars.capitalize %></th>
          <th><%= model_class.human_attribute_name(:sum) %></th>
          <th><%= Address.human_attribute_name(:district) %></th>
          <th><%= model_class.human_attribute_name(:created_at) %></th>
          <th><%= model_class.human_attribute_name(:delivery_time) %></th>
          <th><%=t '.actions', :default => t("helpers.actions") %></th>
        </tr>
      </thead>
      <tbody id="orders">
        <%= render partial: 'my_order', collection: @orders  %>
      </tbody>
    </table>
  </div>
  <div class="span3">
  </div>
</div>

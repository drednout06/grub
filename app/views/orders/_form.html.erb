<%= simple_form_for @order, :html => { :class => 'form-horizontal' } do |form| %>
  
  <% if !signed_in? %>
	  <%= simple_fields_for @user do |f| %>
		  <%= f.input :first_name %>
		  <%= f.input :last_name %>
		  <%= f.input :phone %>
		  <%= f.input :email %>
		  <%= f.input :password %>
		  <%= f.input :password_confirmation %>
		<% end %>
	<% end %>


	<%= simple_fields_for @address do |f| %>
		<% if signed_in? %>
			<%= f.input :first_name, input_html: { value: "#{@user.first_name}"} %>
		  <%= f.input :last_name, input_html: { value: "#{@user.last_name}"} %>
		  <%= f.input :phone, input_html: { value: "#{@user.phone}"} %>
		<% end %>
	  <%= f.input :city %>
	  <%= f.input :district %>
	  <%= f.input :street %>
	  <%= f.input :house %>
	  <%= f.input :korpus %>
	  <%= f.input :porch %>
	  <%= f.input :floor %>
	  <%= f.input :doorphone %>
	  <%= f.input :comment %>
	<% end %>

  <%= form.input :delivery_time %>
  <%= form.input :change_from %>

  <div class="form-actions">
    <%= form.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                orders_path, :class => 'btn' %>
  </div>
<% end %>

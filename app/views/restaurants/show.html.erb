<% provide(:title, "#{@restaurant.name}") %>
<%= render partial: 'restaurants/rating' %>
<div class="row">

	<div class="span9">
		
    <%= render @restaurant %>
  	
		<div class="navbar affix-top" id="nav-menu" data-spy="affix" data-offset-top="280">
			<div class="navbar-inner">
		    <div class="container">

		    <a class="brand" href="#" ><%= t("navigation.menu") %></a>
		    
				<ul class="nav">
					<% @restaurant.menus.each do |menu| %>
						<li>
							<%= link_to "#menu_#{menu.id}" do %>
								<%= menu.name %>
							<% end %>
						</li>
					<% end %>
				</ul>
				<ul class="nav pull-right">
				<a class="brand" href="#reviews" ><%= t("navigation.reviews") %></a>
				</ul>
		    </div>
	    </div>
		</div>
		<div id="menus">
			<%= render @restaurant.menus %>
		</div>
		
		<div id="reviews">
			<p>
			  <h3><%= t("navigation.reviews") %></h3>
			</p>
			<%= render @reviews %>
		</div>
	</div>


	<div class="span3">
		<div class="menu affix-top" data-spy="affix" data-offset-top="90">
			<div id="cart">
				<%= render @cart %>
			</div>
		</div>
	</div>

</div>

<%- model_class = BusinessHour -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:restaurant_id) %>:</strong></dt>
  <dd><%= @business_hour.restaurant_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:schedule) %>:</strong></dt>
  <dd><%= @business_hour.schedule %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              restaurant_business_hours_path(@restaurant), :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_business_hour_path(@business_hour), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              business_hour_path(@business_hour),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
